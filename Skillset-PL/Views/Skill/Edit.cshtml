@model Skillset_PL.ViewModels.SkillViewModel

@{
    ViewBag.Title = "Edit";
}
<link href="~/Content/theme.css" rel="stylesheet" />
<script src="~/Scripts/Skill.js"></script>

@using (Html.BeginForm())
{    
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.skillId)

    <div class="form-horizontal well">
        <label class="control-label alert-success well-sm" style="display:block;text-align:center;background-color:#2a3f54;color:#FFF;font-size:15px;">Edit Skill</label>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.SkillName, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.SkillName, new { htmlAttributes = new { @class = "form-control", style = "width: 80%" } })
                @Html.ValidationMessageFor(model => model.SkillName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SkillDescription, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.SkillDescription, new { htmlAttributes = new { @class = "form-control", style = "width: 80%" } })

                @Html.ValidationMessageFor(model => model.SkillDescription, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-4"></div>

            <div class="col-md-1" style="margin-bottom:10px;">
                <input type="reset" value="Reset" class="btn btn-aqua" onclick="resetValidation()" />
            </div>
            <div class="col-md-1"></div>
            <div class="col-md-1" style="margin-bottom:10px;">
                @Html.ActionLink("Cancel", "Index", new { page = ViewBag.CurrentPage }, htmlAttributes: new { @class = "btn btn-aqua" })
            </div>
            <div class="col-md-1"></div>
            <div class="col-md-1" style="margin-bottom:10px;">

                <input type="submit" id="submit" value="Update" class="btn btn-green" onclick="OnSubmitClick()" />
            </div>

            <div class="col-md-3"></div>
        </div>
    </div>
}

</div>
<script src="~/Scripts/Skill.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

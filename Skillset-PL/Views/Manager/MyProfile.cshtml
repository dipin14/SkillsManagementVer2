@model Skillset_PL.ViewModels.EmployeeViewModel
@{
    Layout = "~/Views/Manager/_ManagerLayout.cshtml";
}
<div class="row first">
    <div class="col-sm-10">
        <div class="panel panel-default">
            <div class="panel-heading">My Profile</div>
            <div class="panel-body">
                <div class="row">

                    <div class="col-sm-5">
                        @if (Model.Gender.ToLower() == "male")
                        {
                            <img class="border border-dark table-bordered" src="~/Images/male.png" alt="man" width="100%" height="100%" />
                        }
                        else
                        {
                            <img class="border border-dark table-bordered" src="~/Images/female.png" alt="man" width="100%" height="100%" />
                        }
                        <hr />
                        <table>

                            <tr>
                                <td><b>Designation </b></td>
                                <td>: @Model.DesignationId</td>
                            </tr>
                            <tr>
                                <td><b>Experience </b></td>
                                <td>: @Model.Experience years</td>
                            </tr>
                            <tr>
                                <td><b>Role </b></td>
                                <td>: @Model.RoleId</td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-sm-7">
                        <table class="table-responsive">
                            <tr>
                                <td><label style="font-size:larger;color:dodgerblue">@Model.Name</label></td>
                            </tr>

                            <tr>
                                <td><b>Address </b></td>
                                <td>: @Model.Address</td>
                            </tr>

                            <tr>
                                <td><b>Mobile Number </b></td>
                                <td>: @Model.MobileNumber</td>
                            </tr>
                            <tr>
                                <td><b>Email Id </b></td>
                                <td>: @Model.Email</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




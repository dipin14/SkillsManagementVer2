@model PagedList.IPagedList<Skillset_PL.ViewModels.ReportingStaff>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{

    Layout = "~/Views/Manager/_ManagerLayout.cshtml";
    ViewBag.Title = "Staff Details";
}

@if (Model.Count() > 0)
{
    <label class="control-label alert-success well-sm" style="display:block;text-align:center">Staff Details</label>
    <br />
     {

    <table id="skilltable" class="table table-hover table-responsive table-bordered">
        <thead>
            <tr>


                <th>
                    @Html.DisplayName("Employee Code")
                </th>
                <th>
                    @Html.DisplayName("Name")
                </th>
                <th>
                    @Html.DisplayName("Designation")
                </th>
                <th>
                    @Html.DisplayName("Email")
                </th>
                <th></th>
            </tr>


        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td data-title="Employee Code">
                        @Html.DisplayFor(modelItem => item.EmployeeCode)
                    </td>
                    <td data-title="Name">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td data-title="Designation">
                        @Html.DisplayFor(modelItem => item.Designation)
                    </td>
                    <td data-title="Email">
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td data-title="">
                        @*<a href="@Url.Action("SkillRate",new { code = item.EmployeeCode, name = item.Name })"><i class="btn fa fa-gears"></i></a>*@
                        @Html.ActionLink("Skills", "SkillRate", new { code = item.EmployeeCode, name = item.Name }, htmlAttributes: new { @class = "btn btn-primary" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{

    <div class="alert alert-warning fade in">
        <strong>No Staff Details!</strong> There is no reporting staff.
    </div>
}
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index",new{page}))
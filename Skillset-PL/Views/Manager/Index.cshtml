
@model PagedList.IPagedList<Skillset_PL.ViewModels.ReportingStaff>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{

    Layout = "~/Views/Manager/_ManagerLayout.cshtml";
    ViewBag.Title = "Staff Details";
}
<div class="row first">
@if (Model.Count() > 0)
{
    <label class="control-label alert-success well-sm" style="display:block;text-align:center">Staff Details</label>
    <br />
    <table class="table table-hover table-responsive table-bordered">
        <tr>
            <th>
                @Html.DisplayName("Employee Code")
            </th>
            <th>
                @Html.DisplayName("Name")
            </th>
            <th>
                @Html.DisplayName("Designation")
            </th>
            <th>
                @Html.DisplayName("Email")
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Designation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                   @Html.ActionLink("Skills", "SkillRate", new { code = item.EmployeeCode, name = item.Name }, htmlAttributes: new { @class = "btn btn-primary" }) 
                </td>
            </tr>
        }

    </table>
}
else
{

    <div class="alert alert-warning fade in">
        <strong>No Staff Details!</strong> There is no reporting staff.
    </div>
}
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index",new{page}))
</div>

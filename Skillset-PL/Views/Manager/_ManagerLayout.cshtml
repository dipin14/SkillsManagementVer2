<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Layout.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://opensource.keycdn.com/fontawesome/4.7.0/font-awesome.min.css" integrity="sha384-dNpIIXE8U05kAbPhy3G1cz+yZmTzA6CY8Vg/u2L9xRnHjJiAK76m2BIEaSEV+/aU" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top" style="background-color:#484848;height:50px;border: 0;">
        <div class="container-fluid">
            <div class="navbar-header">
                <span class="navbar-brand" style="color:white">Skill Management</span>
            </div>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="/Authentication/Logout" style="color:red;margin-top:-10px"><span class="glyphicon glyphicon-log-out btn btn-danger"></span> Logout</a></li>
            </ul>
        </div>
    </nav>

    <div class="nav-side-menu">
        <div class="brand" style="color:white;">Hi Manager</div>
        <i class="fa fa-bars fa-2x toggle-btn" data-toggle="collapse" data-target="#menu-content"></i>

        <div class="menu-list">

            <ul id="menu-content" class="menu-content collapse out">
                <li>
                    <a href="~/Manager/MyProfile">
                        <i class="glyphicon glyphicon-user"></i> Profile
                    </a>
                </li>
                <li>
                    <a href="~/Manager/ManagerRating">
                        <i class="glyphicon glyphicon-star"></i> Rate Skills
                    </a>
                </li>
                <li>
                    <a href="~/Manager/Index">
                        <i class="fa fa-lightbulb-o" style="font-size:20px"></i> View Employees
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="container-fluid body-content">
        <div class="row">
            <div class="col-sm-3"></div>
            <div class="col-sm-9" >
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>




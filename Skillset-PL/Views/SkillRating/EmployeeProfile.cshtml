@model Skillset_PL.ViewModels.EmployeeViewModel
@{
    Layout = "~/Views/SkillRating/_EmployeeLayout.cshtml";
    ViewBag.Title = "My Profile";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link href="~/Content/Profile.css" rel="stylesheet" />
<div class="col-sm-10">
    <div class="panel panel-default">
        <div class="panel-heading" style="color:#fff;background-color:#2a3f54;border-color:#2a3f54">Profile : <label style="font-size:larger;color:#fff;">@Model.Name</label></div>
        <div class="panel-body">
            <div class="row">

                <div class="col-sm-5">
                    @if (Model.Gender.ToLower() == "male")
                    {
                        <img class="border border-dark table-bordered" src="~/Images/male.png" alt="man" width="100%" height="100%" />
                    }
                    else
                    {
                        <img class="border border-dark table-bordered" src="~/Images/female.png" alt="man" width="100%" height="100%" />
                    }
                </div>
                <div class="col-sm-7">
                    <table class="table-responsive profileborder" style="width: 100%">
      
                        <tr>
                            <td style="width:5%"><span class="fa fa-envelope-o"></span></td>
                            <td class="title">&nbsp;Email </td>
                            <td class="info">@Model.Email</td>
                        </tr>
                        <tr>
                            <td style="width:5%"><span class="fa fa-intersex"></span></td>
                            <td class="title">&nbsp;Gender </td>
                            <td class="info">@Model.Gender</td>
                        </tr>
                        <tr>
                            <td style="width:5%"><span class="fa fa-phone"></span></td>
                            <td class="title">&nbsp;Mobile Number </td>
                            <td class="info">@Model.MobileNumber</td>
                        </tr>
                        <tr>
                            <td style="width:5%"><span class="fa fa-cog"></span></td>
                            <td class="title">&nbsp;Designation </td>
                            <td class="info">@Model.DesignationId</td>
                        </tr>
                        <tr>
                            <td style="width:5%"><span class="fa fa-black-tie"></span></td>
                            <td class="title">&nbsp;Experience </td>
                            <td class="info">@Model.Experience years</td>
                        </tr>
                        <tr>
                            <td style="width:5%"><span class="fa fa-briefcase"></span></td>
                            <td class="title">&nbsp;Role </td>
                            <td class="info">@Model.RoleId</td>
                        </tr>

                        <tr>
                            <td style="width:5%"><span class="fa fa-address-card-o"></span></td>
                            <td class="title">&nbsp;Address </td>
                            <td class="info">@Model.Address</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>






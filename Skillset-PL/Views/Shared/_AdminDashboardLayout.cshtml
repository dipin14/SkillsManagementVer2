<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Skill Management</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="content/js/jquery.min.js"></script>
    <script src="content/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://opensource.keycdn.com/fontawesome/4.7.0/font-awesome.min.css" integrity="sha384-dNpIIXE8U05kAbPhy3G1cz+yZmTzA6CY8Vg/u2L9xRnHjJiAK76m2BIEaSEV+/aU" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="~/Scripts/MenuList.js"></script>
    <link href="~/Content/Dashboard.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Lobster|Raleway" rel="stylesheet">
</head>
<body class="body-contents">
    <div class="main_container">
        
        <div class="nav-side-menu">
            <div class="menu-list">
                <div class="navbar nav_title">
                    <a href="~/Dashboard/Index" class="side-title" style="text-decoration:none">
                        <p style="font-family: 'Lobster';font-size:20px;color: #e7e7e7;">Skillsys</p>
                    </a>
                </div>
                <ul class="nav side-list">
                    <li id="dashboardsidebar">
                        <a href="~/Dashboard/Index" class="top-dashboard" >
                            <i class="fa fa-home"></i><div>Dashboard</div>
                        </a>
                    </li>
                    <li id="employeesidebar">
                        <a href="~/Employee/Index" class="dashboard-list" >
                            <i class="fa fa-user"></i><div>Manage Employees</div>
                        </a>
                    </li>
                    <li id="skillssidebar">
                        <a href="~/Skill/Index" class="dashboard-list" >
                            <i class="fa fa-lightbulb-o"></i><div>Manage Skills</div>
                        </a>
                    </li>


                </ul>
            </div>
        </div>

        <nav class="navbar navbar-inverse navbar-fixed-top" style="background:#EDEDED;border-bottom:1px solid #D9DEE4;margin-left:70px">
            <div class="container-fluid">

                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" onclick="">Admin<span class="caret" style="color:black;"></span></a>
                        <ul class="dropdown-menu" id="list">
                            <li><a href="~/Dashboard/Index"><i class="fa fa-home pull-right"></i>Dashboard</a></li>
                            <li><a href="~/Login/Logout"><i class="fa fa-sign-out pull-right"></i>Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
    </div>

    <div class="container-fluid content">
        @RenderBody()
    </div>
    
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>

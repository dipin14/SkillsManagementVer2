<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Skill Management</title>
    <link href="~/Content/Dashboard.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://opensource.keycdn.com/fontawesome/4.7.0/font-awesome.min.css" integrity="sha384-dNpIIXE8U05kAbPhy3G1cz+yZmTzA6CY8Vg/u2L9xRnHjJiAK76m2BIEaSEV+/aU" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid ">
            <div class="navbar-header ">
                <i class="fa fa-bars fa-2x toggle-btn" data-toggle="collapse" data-target="#menu-content"></i>

                <span class="navbar-brand" style="color:white">Skill Management</span>
            </div>
           
            <ul class="nav navbar-nav navbar-right">
               
                <li><a href="~/Login/Logout" style="color:red"><span class="glyphicon glyphicon-log-out btn-sm btn-danger"></span></a></li>
            </ul>
           
        </div>
    </nav>

    <div class="nav-side-menu">
        <div class="brand" style="color:white;">Hi Admin</div>

        <div class="menu-list">

            <ul id="menu-content" class="menu-content collapse">
                <li>
                    <a href="~/Dashboard/Index">
                        <i class="fa fa-dashboard fa-lg"></i> Dashboard
                    </a>
                </li>
                <li>
                    <a href="~/Employee/Index">
                        <i class="glyphicon glyphicon-user"></i> Manage Employees
                    </a>
                </li>
                <li>
                    <a href="~/Skill/Index">
                        <i class="fa fa-lightbulb-o" style="font-size:15px"></i> Manage Skills
                    </a>
                </li>

                <li>
                    <a href="~/AdministratorView/Index">
                        <i class="fa fa-eye" style="font-size:20px"></i> View Employee Skills
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <div class="container-fluid body-content">
        <div class="row">
            <div class="col-sm-2"></div>
            <div class="col-sm-10">

                @RenderBody()
            </div>
        </div>
    </div>
    
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>

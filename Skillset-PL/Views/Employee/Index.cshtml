@model PagedList.IPagedList<Skillset_PL.ViewModels.EmployeeViewModel>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
    ViewBag.Title = "Index";
}
<div class="row first">
    <h3>Employee List</h3>
    <p style="text-align: right">
        @Html.ActionLink("New Employee", "Create", null, htmlAttributes: new { @class = "btn btn-success" })
        <div class="row second" style="padding-bottom:10px;">
            @using (Html.BeginForm("Index", "Employee", FormMethod.Get))
            {
                <div class="form-group">
                    <div >
                        <div class="col-xs-7">
                            @Html.Editor("search", null, new { htmlAttributes = new { @class = "form-control", @placeholder = "Name/Code/Designation" } })
                        </div>
                        <div class="col-xs-5"> 
                            <button type="submit" name="submit" class="btn btn-success">
                                <span class="glyphicon glyphicon-search"></span>
                            </button>
                            @Html.ActionLink(" ", "Index", null, htmlAttributes: new { @class = "btn btn-success glyphicon glyphicon-refresh" })
                        </div>
                    </div>
                </div>

            }
        </div>

        @if ((Model.Count() > 0))
        {

            <label class="control-label alert-success well-sm" style="display:block;text-align:center">Employee Details</label>

            <table class="table table-bordered table-hover table-responsive">
                <tr>
                    <th>Employee Code</th>
                    <th>Name</th>
                    <th>Designation</th>
                    <th>Operations</th>
                </tr>



                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmployeeCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DesignationId)
                        </td>

                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.EmployeeCode }, htmlAttributes: new { @class = "btn btn-warning" })
                            @Html.ActionLink("Details", "Details", new { id = item.EmployeeCode }, htmlAttributes: new { @class = "btn btn-primary" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.EmployeeCode }, htmlAttributes: new { @class = "btn btn-danger" })
                            @Html.ActionLink("Skills", "Skills", new { id = item.EmployeeCode }, htmlAttributes: new { @class = "btn btn-success" })
                        </td>
                    </tr>
                }
                <tr>
                    <td colspan="2"><b>Total Number of Employees</b></td>
                    <td colspan="2"><b>@ViewData["EmployeeCount"]</b></td>
                </tr>

            </table>

        }
        else
        {
            <br />
            <div class="alert alert-warning fade in">
                <strong>No Employees!</strong> There are no employees to display.
            </div>
        }
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
        @Html.PagedListPager(Model, page => Url.Action("Index", new { search = ViewBag.search, page }))
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/Employee.js"></script>


@model PagedList.IPagedList<Skillset_PL.ViewModels.EmployeeViewModel>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
    ViewBag.Title = "Index";
}
<div class="row first">
    <h2>Employee List</h2>
    <p style="text-align: right">
        @Html.ActionLink("New Employee", "Create", null, htmlAttributes: new { @class = "btn btn-success" })
  
    <p style="color:red;"> @TempData["message"] </p>

        <div class="panel-group">
            <div class="panel panel-success">
                <div class="panel-heading" style="display:block;text-align:center"><b><u>Search</u></b></div>
                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-md-5"><b> Search By Name/Code/Designation</b>
                        </div>
                        
                        @using (Html.BeginForm("IndexSearch","Employee", FormMethod.Get))
                        {  
                        <div class="col-md-3">
                            @Html.Editor("search", null, new { htmlAttributes = new { @class = "form-control" } })
                            &nbsp; &nbsp;
                        </div>
                        <div class="col-md-4">
                            <input type="submit" name="submit" value="Search" class="btn btn-success" />
                            &nbsp;
                            @Html.ActionLink("Reset", "Index", null, htmlAttributes: new { @class = "btn btn-success" })
                        </div>
                        }
                </div>
            </div>
        </div>
    </div>

    @if ((Model.Count() > 0))
    {
        <label class="control-label alert-success well-sm" style="display:block;text-align:center"><u>Employee Details</u></label>
            <table class="table table-bordered table-hover table-responsive">
                <tr>
                    <th>Employee Code</th>
                    <th>Name</th>
                    <th>Designation</th>
                    <th>Operations</th>
                </tr>



                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmployeeCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DesignationId)
                        </td>

                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.EmployeeCode }, htmlAttributes: new { @class = "btn btn-warning" })
                            @Html.ActionLink("Details", "Details", new { id = item.EmployeeCode }, htmlAttributes: new { @class = "btn btn-primary" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.EmployeeCode }, htmlAttributes: new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }

            </table>
            }
            else
            {
            <br />
            <div class="alert alert-warning fade in">
                <a href="#" class="close" data-dismiss="alert">&times;</a>
                <strong>No Employees!</strong> There are no employees to display.
            </div>
            }
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index",
          new
          {
              page
          }))
</div>
